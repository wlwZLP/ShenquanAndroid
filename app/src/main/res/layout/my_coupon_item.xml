<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
       >

        <LinearLayout
            android:id="@+id/my_coupon_item_left"
            android:layout_width="134dp"
            android:layout_height="match_parent"

            android:background="@drawable/bg_my_coupon_left"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_coupon_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372300"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/my_coupon_item_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="质保期至"
                android:textColor="#372300"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/my_coupon_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="#372300"
                android:textSize="11sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/my_coupon_item_left"
            android:id="@+id/my_coupon_item_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/bg_my_coupon_right">


            <ImageView
                android:id="@+id/my_coupon_item_goods_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/my_coupon_item_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/my_coupon_item_goods_icon"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/my_coupon_item_goods_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#111111"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/my_coupon_item_goods_goumai_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_coupon_item_goods_icon"
                android:layout_alignLeft="@+id/my_coupon_item_goods_icon"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/my_coupon_item_goods_liushui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_coupon_item_goods_goumai_time"
                android:layout_alignLeft="@+id/my_coupon_item_goods_icon"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="12sp" />


            <View
                android:id="@+id/my_coupon_item_goods_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/my_coupon_item_goods_liushui"
                android:layout_marginTop="8dp"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/my_coupon_item_goods_view"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_coupon_item_qixiao"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="取消订单"
                    android:textSize="12sp"
                    android:textColor="#b2b2b2"
                    android:id="@+id/my_coupon_item_goods_quxiao"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_coupon_item_pay"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="立即支付"
                    android:textSize="12sp"
                    android:textColor="#222222"
                    android:id="@+id/my_coupon_item_goods_pay"/>
                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_coupon_item_pay"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="查看卡券"
                    android:textSize="12sp"
                    android:textColor="#222222"
                    android:id="@+id/my_coupon_item_goods_look"/>
            </LinearLayout>



            <ImageView
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/my_coupon_item_goods_status"/>


        </RelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/my_coupon_item_goods_mengceng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_my_coupon_shibai_left"
            android:alpha="0.5"/>

    </RelativeLayout>

</LinearLayout>
