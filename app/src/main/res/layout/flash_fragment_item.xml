<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/background_mne_white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:id="@+id/flash_fragment_item_image"/>

    <ImageView
        android:layout_marginTop="12dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toRightOf="@+id/flash_fragment_item_image"
        android:layout_marginLeft="8dp"
        android:id="@+id/flash_fragment_item_mall_icon"/>
    <TextView
        android:id="@+id/flash_fragment_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/flash_fragment_item_mall_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="0dp"
        android:textColor="#111111"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/flash_fragment_item_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_fragment_item_title"
        android:layout_alignLeft="@+id/flash_fragment_item_mall_icon"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="12sp" />

    <com.dongdian.shenquan.view.MyProgress
        android:layout_below="@+id/flash_fragment_item_shop_name"
        android:layout_alignLeft="@+id/flash_fragment_item_mall_icon"
        android:id="@+id/flash_fragment_item_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginRight="52dp"
        android:max="100"
        android:progressDrawable="@drawable/turnout_progressbar_horizontal"
        android:progress="70" />




    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_fragment_item_progress"
        android:layout_alignLeft="@+id/flash_fragment_item_mall_icon"
        android:textColor="#FB5434"
        android:textSize="17sp"
        android:id="@+id/flash_fragment_item_price"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/flash_fragment_item_price"
        android:layout_alignBottom="@+id/flash_fragment_item_price"
        android:layout_marginBottom="3dp"
        android:textColor="#999999"
        android:textSize="12sp"
        android:id="@+id/flash_fragment_item_old_price"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FB5434"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/flash_fragment_item_price"
        android:layout_marginRight="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/flash_fragment_item_status_text"/>





</RelativeLayout>
