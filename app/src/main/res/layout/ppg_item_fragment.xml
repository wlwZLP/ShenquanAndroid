            name="ppgitemviewmodel"
            type="com.dongdian.shenquan.ui.fragment.ppgitem.PPGItemFragmentViewModel" />
    </data>

    <LinearLayout
        android:background="#f6f6f6"
        android:orientation="vertical"
        android:layout_width="match_parent"
