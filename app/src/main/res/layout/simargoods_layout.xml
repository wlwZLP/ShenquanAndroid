<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@drawable/good_detail_similar_item"
    >
    <ImageView
        android:id="@+id/simargoods_item_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"

        android:src="@mipmap/ic_launcher" />
    
    
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/simargoods_item_image"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:id="@+id/simargoods_item_mall_icon"/>
    
    


    <TextView
        android:id="@+id/simargoods_item_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="大姐夫辣豆腐卡阿里的减肥啦大豆腐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/simargoods_item_mall_icon"
        android:layout_below="@+id/simargoods_item_image"/>
    <TextView
        android:id="@+id/quan"
        android:text="300元券"
        android:textColor="#FB5434"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/good_juan"
        android:layout_width="wrap_content"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simargoods_item_title"/>
    <TextView
        android:layout_toRightOf="@+id/quan"
        android:id="@+id/zhuan"
        android:text="300元券"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/good_zhuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simargoods_item_title"/>

    <LinearLayout
        android:id="@+id/bynad_sdksearch_result_goods_item_coupon_after_price_layout"
        android:layout_below="@+id/quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"

        >
        <TextView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="11sp"
            android:textColor="#FB5434"
            />
        <TextView
            android:id="@+id/simargoods_item_coupon_after_price_tv"
            android:layout_marginLeft="2dp"
            android:padding="-1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="299"
            android:textSize="18sp"
            android:textColor="#FB5434"
            />

        <TextView
            android:id="@+id/simargoods_item_price"
            android:layout_marginLeft="2dp"
            android:padding="-1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="299"
            android:textSize="12sp"
            android:textColor="#999999"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/simargoods_item_sale"
            android:layout_marginLeft="2dp"
            android:padding="-1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="299"
            android:textSize="12sp"
            android:textColor="#999999"
            />


    </LinearLayout>






</RelativeLayout>
