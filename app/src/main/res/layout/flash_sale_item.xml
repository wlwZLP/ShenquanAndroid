<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/flash_sale_layout"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/flash_sale_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_width="102dp"
        android:layout_height="102dp" />


    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_sale_cover_image"
        android:id="@+id/flash_sale_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#333333"/>







    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/flash_sale_quanhoujia"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/flash_sale_title"
        android:layout_below="@+id/flash_sale_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#F53C25"/>


        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:id="@+id/flash_sale_xiaoliang"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/bg_flash_sale_xiaoliang"
            android:layout_alignBottom="@+id/flash_sale_cover_image"
            android:layout_alignLeft="@+id/flash_sale_cover_image"
            android:alpha="0.7"
            />




</RelativeLayout>
