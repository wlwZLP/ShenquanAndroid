<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/background_mne_white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="82dp"
           android:layout_marginLeft="8dp"
            android:id="@+id/my_collect_item_good_icon"/>



        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_margin="8dp"
          />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_marginTop="14dp"
                android:id="@+id/my_collect_item_mall_icon"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textColor="#111111"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/my_collect_item_mall_icon"
                android:layout_marginTop="11dp"
                android:id="@+id/my_collect_item_good_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"

                android:textSize="15sp"
                android:textColor="#FB5434"
                android:layout_marginRight="8dp"
                android:id="@+id/my_collect_item_good_price"/>






        </RelativeLayout>







    </LinearLayout>



</LinearLayout>
